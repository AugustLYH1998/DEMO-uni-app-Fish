			}

		},
		{
			"path": "pages/test/test",
			"style": {
				// https://uniapp.dcloud.net.cn/collocation/pages.html#style
				"navigationBarTitleText": "测试页面",
				"enablePullDownRefresh": false
			}

		},

		{
			"path": "pages/index/index",
